<body>
  <div class="card">
    <h1>押すと増えるだけのボタン</h1>
    <div id="count" class="count">0</div>
    <button id="btn">PUSH</button>
  </div>

  <script>
    let count = 0;
    const countEl = document.getElementById("count");
    document.getElementById("btn").onclick = () => {
      count++;
      countEl.textContent = count;
    };
  </script>
